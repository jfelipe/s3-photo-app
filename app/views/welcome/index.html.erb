<% if current_user %>
<div class="row text-center">
  <h3>Welcome: <%= current_user.email %></h3>
</div>
<% else %>
  <div class="jumbotron">
    <h2>Welcome to the Photo Management App!</h2>
    <p class="lead">
      You'll love managing your Photos with our application. Sign up!
    </p>
  </div>

  <div class="row text-center">
    <p class="lead">
      This is a test application to learn how to use Stripe and Amazon S3 integration in a Rails app, fell free to play around.
    </p>
  </div>

  <div class="row text-center">
      <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-lg btn-primary sign-up' %>
  </div>


<% end %>
